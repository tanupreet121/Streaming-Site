{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable"],
        "jsx": "react",
        "baseUrl": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "paths": {
            "stremio/*": ["*"],
        },
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "strict": true,
    },
    "include": [
        "src/",
    ]
}
